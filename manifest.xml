<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">

  <Id>f8c5e4f2-9b9a-4d3d-8b47-123456789abc</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>STEGA</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="STEGA Add-in"/>
  <Description DefaultValue="Secure your emails with STEGA verification."/>
  <IconUrl DefaultValue="https://stega-project.github.io/stega-outlook-addin/icon.png"/>
  <HighResolutionIconUrl DefaultValue="https://stega-project.github.io/stega-outlook-addin/icon.png"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://stega-project.github.io/stega-outlook-addin/taskpane.html"/>
  </DefaultSettings>

  <ExtensionPoint xsi:type="MessageReadCommandSurface">
    <OfficeTab id="TabDefault">
      <Group id="msgReadGroup" label="STEGA">
        <Control xsi:type="Button" id="msgReadButton">
          <Label resid="residLabel1"/>
          <Supertip>
            <Title resid="residLabel1"/>
            <Description resid="residDesc1"/>
          </Supertip>
          <Icon>
            <bt:Image size="16" resid="icon16"/>
            <bt:Image size="32" resid="icon32"/>
          </Icon>
          <Action xsi:type="ShowTaskpane">
            <SourceLocation resid="taskpaneUrl"/>
          </Action>
        </Control>
      </Group>
    </OfficeTab>
  </ExtensionPoint>

  <Resources>
    <bt:Images>
      <bt:Image id="icon16" DefaultValue="https://stega-project.github.io/stega-outlook-addin/icon.png"/>
      <bt:Image id="icon32" DefaultValue="https://stega-project.github.io/stega-outlook-addin/icon.png"/>
    </bt:Images>
    <bt:Urls>
      <bt:Url id="taskpaneUrl" DefaultValue="https://stega-project.github.io/stega-outlook-addin/taskpane.html"/>
    </bt:Urls>
    <bt:ShortStrings>
      <bt:String id="residLabel1" DefaultValue="Open STEGA"/>
    </bt:ShortStrings>
    <bt:LongStrings>
      <bt:String id="residDesc1" DefaultValue="Open STEGA verification panel"/>
    </bt:LongStrings>
  </Resources>

  <Permissions>ReadItem</Permissions>

</OfficeApp>
