<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:type="MailApp">
  <Id>8f8e29d2-2b12-4e94-915a-2b6e6de2b2a1</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>STEGA</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="STEGA Add-in"/>
  <Description DefaultValue="Open the STEGA verification panel for the selected email."/>
  <IconUrl DefaultValue="https://stega-project.github.io/stega-outlook-addin/icon-80.png"/>
  <HighResolutionIconUrl DefaultValue="https://stega-project.github.io/stega-outlook-addin/icon-80.png"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- requirement set minimal pour Outlook -->
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <!-- FormSettings AVANT Permissions -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://stega-project.github.io/stega-outlook-addin/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>

  <!-- Règle d’activation (lecture de message) -->
  <Rule xsi:type="RuleCollection" Mode="Or" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>
</OfficeApp>
