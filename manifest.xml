<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:type="MailApp">

  <Id>8f8e29d2-2b12-4e94-915a-2b6e6de2b2a1</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>STEGA</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="STEGA Add-in"/>
  <Description DefaultValue="Open the STEGA verification panel for the selected email."/>
  <IconUrl DefaultValue="https://stega-project.github.io/stega-outlook-addin/icon-80.png"/>
  <HighResolutionIconUrl DefaultValue="https://stega-project.github.io/stega-outlook-addin/icon-80.png"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- Requirement set global (API Office.js minimale) -->
  <Requirements>
    <Sets DefaultMinVersion="1.8">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <!-- FormSettings AVANT Permissions -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://stega-project.github.io/stega-outlook-addin/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- Lecture seule de l’item -->
  <Permissions>ReadItem</Permissions>

  <!-- Activation pour lecture de message -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- Command surface + pinning, avec préfixes explicites -->
  <ov:VersionOverrides
    xmlns:ov="http://schemas.microsoft.com/office/mailappversionoverrides"
    xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:type="ov:VersionOverridesV1_0">

    <!-- Requirement set pour commandes -->
    <ov:Requirements>
      <bt:Sets DefaultMinVersion="1.5">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </ov:Requirements>

    <ov:Hosts>
      <ov:Host xsi:type="ov:MailHost">
        <ov:DesktopFormFactor>
          <!-- Requis par le schéma des commandes -->
          <ov:FunctionFile resid="Commands.Url"/>

          <ov:ExtensionPoint xsi:type="ov:MessageReadCommandSurface">
            <ov:OfficeTab id="TabDefault">
              <ov:Group id="msgReadGroup">
                <ov:Label resid="groupLabel"/>
                <ov:Control xsi:type="Button" id="msgReadOpenPane">
                  <ov:Label resid="buttonLabel"/>
                  <ov:Supertip>
                    <ov:Title resid="buttonLabel"/>
                    <ov:Description resid="buttonDescription"/>
                  </ov:Supertip>
                  <ov:Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </ov:Icon>
                  <ov:Action xsi:type="ShowTaskpane">
                    <ov:TaskpaneId>StegaPane</ov:TaskpaneId>
                    <ov:SourceLocation resid="Taskpane.Url"/>
                    <ov:SupportsPinning>true</ov:SupportsPinning>
                  </ov:Action>
                </ov:Control>
              </ov:Group>
            </ov:OfficeTab>
          </ov:ExtensionPoint>

        </ov:DesktopFormFactor>
      </ov:Host>
    </ov:Hosts>

    <ov:Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://stega-project.github.io/stega-outlook-addin/icon-80.png"/>
        <bt:Image id="icon32" DefaultValue="https://stega-project.github.io/stega-outlook-addin/icon-80.png"/>
        <bt:Image id="icon80" DefaultValue="https://stega-project.github.io/stega-outlook-addin/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://stega-project.github.io/stega-outlook-addin/taskpane.html"/>
        <bt:Url id="Commands.Url" DefaultValue="https://stega-project.github.io/stega-outlook-addin/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="STEGA"/>
        <bt:String id="buttonLabel" DefaultValue="Open STEGA"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="buttonDescription" DefaultValue="Open the STEGA verification panel for this message."/>
      </bt:LongStrings>
    </ov:Resources>

  </ov:VersionOverrides>
</OfficeApp>
